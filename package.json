{
  "name": "hancock-dlt-broker",
  "version": "1.0.0",
  "description": "Hancock DLT Broker",
  "main": "index.js",
  "scripts": {
    "start": "npm run serve:dev",
    "serve:dev": "concurrently \"npm run watch:ts\" \"sleep 5 && npm run serve:debug\"",
    "serve:prod": "node dist/index.js | pino -c --errorProps '*'",
    "serve:debug": "nodemon --inspect=0.0.0.0 dist/index.js | pino -c --errorProps '*'",
    "build:ts": "tsc",
    "watch:ts": "tsc -w --inlineSources --inlineSourceMap",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "coverage": "jest --coverage",
    "lint": "tslint --project .",
    "lint:fix": "npm run lint -- --fix",
    "docs": "rimraf documentation && mkdirp documentation && raml2html --theme raml2html-markdown-theme raml/api.raml > documentation/api.md"
  },
  "repository": {
    "type": "git",
    "url": "ssh://git@bitbucket.kickstartteam.es:7999/BH/kst-hancock-ms-dlt-broker.git"
  },
  "keywords": [
    "hancock",
    "dlt",
    "broker"
  ],
  "author": "Angel Manzano Alcaraz <angel.manzano.contractor@bbva.com>",
  "license": "ISC",
  "devDependencies": {
    "@types/config": "0.0.33",
    "@types/express": "4.11.0",
    "@types/jest": "^23.1.3",
    "@types/jsonwebtoken": "^7.2.7",
    "@types/mongodb": "2.2.18",
    "@types/pino": "^4.16.0",
    "@types/request": "^2.47.1",
    "@types/request-promise-native": "^1.0.15",
    "@types/uuid": "^3.4.3",
    "@types/ws": "4.0.0",
    "concurrently": "3.5.1",
    "jest": "^23.2.0",
    "jest-junit": "^5.1.0",
    "mkdirp": "0.5.1",
    "nodemon": "1.14.12",
    "raml2html": "6.4.2",
    "raml2html-markdown-theme": "1.0.2",
    "rimraf": "2.6.2",
    "ts-jest": "^22.4.6",
    "tslint": "^5.8.0",
    "typescript": "^2.9.2"
  },
  "dependencies": {
    "config": "1.29.2",
    "express": "^4.16.3",
    "js-yaml": "3.10.0",
    "jsonwebtoken": "^8.3.0",
    "mongodb": "3.0.2",
    "node-forge": "0.7.5",
    "pino": "^4.11.0",
    "request": "^2.87.0",
    "request-promise-native": "^1.0.5",
    "uuid": "^3.3.2",
    "web3": "^1.0.0-beta.34",
    "ws": "4.0.0"
  }
}
