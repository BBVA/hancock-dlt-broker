{
  "name": "hancock-dlt-broker",
  "version": "1.0.0",
  "description": "Hancock DLT Broker",
  "main": "index.js",
  "scripts": {
    "start": "npm run serve:dev",
    "serve:dev": "concurrently \"npm run watch:ts\" \"sleep 3 && npm run serve:debug\"",
    "serve:prod": "nodemon dist/index.js",
    "serve:debug": "nodemon --inspect=0.0.0.0 dist/index.js",
    "build:ts": "tsc",
    "watch:ts": "tsc -w",
    "test": "echo \"Error: no test specified\" && exit 0",
    "docs": "rimraf documentation && mkdirp documentation && raml2html --theme raml2html-markdown-theme raml/api.raml > documentation/api.md"
  },
  "repository": {
    "type": "git",
    "url": "ssh://git@bitbucket.kickstartteam.es:7999/BH/kst-hancock-ms-dlt-broker.git"
  },
  "keywords": [
    "hancock",
    "dlt",
    "broker"
  ],
  "author": "Angel Manzano Alcaraz <angel.manzano.contractor@bbva.com>",
  "license": "ISC",
  "devDependencies": {
    "@types/config": "0.0.33",
    "@types/cors": "2.8.3",
    "@types/express": "4.11.0",
    "@types/mongodb": "2.2.18",
    "concurrently": "3.5.1",
    "mkdirp": "0.5.1",
    "raml2html": "6.4.2",
    "raml2html-markdown-theme": "1.0.2",
    "rimraf": "2.6.2",
    "tslint": "5.8.0",
    "typescript": "2.6.2"
  },
  "dependencies": {
    "config": "1.28.1",
    "cors": "2.8.4",
    "express": "4.16.2",
    "js-yaml": "3.10.0",
    "mongodb": "3.0.0-rc0",
    "nodemon": "1.14.1"
  }
}
